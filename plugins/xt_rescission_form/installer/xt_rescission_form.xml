<?xml version="1.0" encoding="UTF-8"?>
<xtcommerceplugin>
 	<title>Rescission Form</title>
    <version>1.0.1</version>
    <code>xt_rescission_form</code>
    <url>http://www.xt-commerce.com</url>
    <description>Widerrufsformular</description>
    <type>core</type>
	<developer>xt:Commerce</developer>
<documentation_link><![CDATA[https://xtcommerce.atlassian.net/wiki/pages/viewpage.action?pageId=31031309]]></documentation_link>
<marketplace_link><![CDATA[http://addons.xt-commerce.com/index.php?page=product&info=4504]]></marketplace_link>
    <icon>xt-commerce_logo.jpg</icon>
	<db_install><![CDATA[
        include _SRV_WEBROOT . _SRV_WEB_PLUGINS . 'xt_rescission_form/hooks/db_install.php';
	]]></db_install>
	<db_uninstall>
	<![CDATA[
			include _SRV_WEBROOT . _SRV_WEB_PLUGINS . 'xt_rescission_form/hooks/db_uninstall.php';
	]]>
	</db_uninstall>
	<plugin_code>
        <code>
            <hook>class.page_handler.php:_getPage_top</hook>
            <phpcode>
                <![CDATA[define('PAGE_XT_RESCISSION_FORM',_SRV_WEB_PLUGINS.'xt_rescission_form/pages/xt_rescission_form.php');]]></phpcode>
            <order>1</order>
            <active>1</active>
        </code>
		<code>
            <hook>admin_dropdown.php:dropdown</hook>
            <phpcode>
                <![CDATA[include _SRV_WEBROOT . _SRV_WEB_PLUGINS . 'xt_rescission_form/hooks/admin_dropdown.php_dropdown.php';]]></phpcode>
            <order>1</order>
            <active>1</active>
        </code>
		<code>
            <hook>class.content:get_Content_Links_bottom</hook>
            <phpcode>
                <![CDATA[include _SRV_WEBROOT . _SRV_WEB_PLUGINS . 'xt_rescission_form/hooks/class_content.get_Content_Links_bottom.php';]]></phpcode>
            <order>1</order>
            <active>1</active>
        </code>
		<code>
			<hook>styles.php:bottom</hook>
			<phpcode>
				<![CDATA[include _SRV_WEBROOT . _SRV_WEB_PLUGINS . 'xt_rescission_form/hooks/styles.phpbottom.php';]]></phpcode>
			<order>1</order>
			<active>1</active>
		</code>
        <code>
            <hook>class.content:getContentLinksbyParent_bottom</hook>
            <phpcode>
                <![CDATA[include _SRV_WEBROOT . _SRV_WEB_PLUGINS . 'xt_rescission_form/hooks/class_content.getContentLinksbyParent_bottom.php';]]></phpcode>
            <order>1</order>
            <active>1</active>
        </code>
    </plugin_code>
    <configuration>
        <config>
            <key>ACTIVATE_XT_RESCISSION_FORM</key>
            <type>dropdown</type>
            <url>conf_truefalse</url>
            <value>true</value>
            <de>
                <title>Status</title>
            </de>
            <en>
                <title>Activate Form</title>
            </en>
        </config>
        <config>
            <key>XT_RESCISSION_FORM_CLIENT_NO_REQUIRED</key>
            <type>dropdown</type>
            <url>conf_truefalse</url>
            <value>true</value>
            <de>
                <title>Kundennummer erforderlich</title>
            </de>
            <en>
                <title>Clinet No. Required</title>
            </en>
        </config>
        <config>
            <key>XT_RESCISSION_FORM_INVOICE_NO_REQUIRED</key>
            <type>dropdown</type>
            <url>conf_truefalse</url>
            <value>true</value>
            <de>
                <title>Rechnungsnummer erforderlich</title>
            </de>
            <en>
                <title>Invoice No. Required</title>
            </en>
        </config>
        <config>
            <key>XT_RESCISSION_FORM_SHOW_IN_CONTENT_BLOCK</key>
            <type>dropdown</type>
            <url>not_protected_content_blocks</url>
            <value></value>
            <de>
                <title>Anzeige in Menü</title>
            </de>
            <en>
                <title>Show in menu</title>
            </en>
        </config>
        <config>
            <key>XT_RESCISSION_FORM_USE_SSL</key>
            <type>dropdown</type>
            <url>conf_truefalse</url>
            <value>false</value>
            <de>
                <title>SSL verwenden</title>
            </de>
            <en>
                <title>Use SSL</title>
            </en>
        </config>
        <config>
            <key>XT_RESCISSION_FORM_LINK_SORT</key>
            <type>textfield</type>
            <value>0</value>
            <de>
                <title>Reihenfolge</title>
            </de>
            <en>
                <title>Sorting</title>
            </en>
        </config>
	</configuration>
	<language_content>
        <phrase>
            <key>TEXT_RESCISSION_FORM</key>
            <class>store</class>
            <de>
                <value>Widerrufsformular</value>
            </de>
            <en>
                <value>Rescission Form</value>
            </en>
        </phrase>
        <phrase>
            <key>TEXT_RESCISSION_FORM_INTRO</key>
            <class>store</class>
            <de>
                <value>Wenn Sie den Vertrag widerrufen wollen, dann füllen Sie bitte das nachfolgende Formular aus und senden Sie es uns zu.</value>
            </de>
            <en>
                <value>If you want to cancel the order, then please fill the form below and send it to us.</value>
            </en>
        </phrase>
        
        <phrase>
            <key>TEXT_CLIENT_NUMBER</key>
